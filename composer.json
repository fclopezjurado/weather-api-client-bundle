{
    "name": "fclopezjurado/weather-api-client-bundle",
    "version": "0.1.0",
    "description": "Weather API client bundle",
    "type": "symfony-bundle",
    "license": "proprietary",
    "require": {
        "php": ">=7.2.5",
        "ext-json": "*",
        "guzzlehttp/promises": "^1.4",
        "nyholm/psr7": "^1.3",
        "php-http/httplug": "^2.2",
        "symfony/http-client": "5.1.*",
        "symfony/http-kernel": "^5.1",
        "symfony/serializer": "^5.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "mi-schi/phpmd-extension": "^4.3",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.57",
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/dotenv": "^5.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Tui\\Weather\\ApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tui\\Weather\\ApiClient\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs",
            "php-cs-fixer fix -v --dry-run --using-cache=no --allow-risky=yes",
            "phpmd src text phpmd.xml",
            "phpstan analyse -l 8 src tests"
        ],
        "lint:fix": "php-cs-fixer fix --allow-risky=yes",
        "test:unit": [
            "@php vendor/bin/phpunit --testsuite='Unit Tests'"
        ],
        "test:functional": [
            "@php vendor/bin/phpunit --testsuite='Functional Tests'"
        ],
        "test:all": [
            "@php vendor/bin/phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.1.*"
        }
    }
}
